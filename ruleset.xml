<?xml version="1.0"?>
<ruleset name="ShellCurl">
    <description>
        PSR-12 configuration for PHP 5.6, compatible with PHP 7/8, avoiding false positives.
    </description>

    <!-- Apply PSR-12 standard -->
    <rule ref="PSR12">
        <exclude name="PSR12.Properties.ConstantVisibility.NotFound"/> <!-- PHP 5.6 compatibility: constant visibility not supported -->
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>      <!-- Allow global statements like "require" in class files -->
    </rule>

    <!-- Apply PHPCompatibility checks, excluding noisy rules -->
    <rule ref="PHPCompatibility">
        <exclude name="PHPCompatibility.Constants.NewConstants"/>                     <!-- Ignore constants not available in older versions -->
        <exclude name="PHPCompatibility.FunctionNameRestrictions.NewMagicMethods"/>   <!-- Ignore __serialize(), __unserialize(), etc. -->
        <exclude name="PHPCompatibility.FunctionDeclarations.NewReturnTypeDeclarations.voidFound" /> <!-- Ignore return type "void" -->
    </rule>

    <!-- Target PHP versions -->
    <config name="testVersion" value="5.6-8.2"/>

    <!-- Exclude constants definition files -->
    <exclude-pattern>*/constants.php</exclude-pattern>
    <exclude-pattern>*/curl_constants.php</exclude-pattern>
</ruleset>
